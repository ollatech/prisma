<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	<services>
    <service id="olla.request_stack" alias="request_stack" />
    <service id="Olla\Prisma\Controller" class="Olla\Prisma\Controller" public="true">
      <argument type="service" id="olla.request_stack" />
      <argument type="service" id="olla.operation" />
    </service>
    <service id="Olla\Prisma\Router\AdminRoute" class="Olla\Prisma\Router\AdminRoute" >
      <argument type="service" id="olla.metadata" />
      <tag name="routing.loader" />
    </service>
    <service id="Olla\Prisma\Router\ApiRoute" class="Olla\Prisma\Router\ApiRoute" >
      <argument type="service" id="olla.metadata" />
      <tag name="routing.loader" />
    </service>
    <service id="Olla\Prisma\Router\FrontendRoute" class="Olla\Prisma\Router\FrontendRoute" >
      <argument type="service" id="olla.metadata" />
      <tag name="routing.loader" />
    </service>
    <service id="Olla\Prisma\Router\GraphqlRoute" class="Olla\Prisma\Router\GraphqlRoute" >
      <argument type="service" id="olla.metadata" />
      <tag name="routing.loader" />
    </service>
  </services>
</container>